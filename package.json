{
  "name": "ai-nexus",
  "version": "1.4.0",
  "description": "Unified rule manager for Claude Code, Cursor, and Codex - write once, use everywhere, save tokens",
  "main": "dist/index.js",
  "bin": {
    "ai-nexus": "bin/ai-rules.cjs"
  },
  "type": "module",
  "scripts": {
    "build": "tsc && cp -r src/browse dist/",
    "dev": "tsc --watch",
    "test": "vitest",
    "lint": "eslint src/",
    "prepare": "npm run build"
  },
  "keywords": [
    "claude",
    "codex",
    "cursor",
    "ai",
    "rules",
    "cli",
    "coding-assistant",
    "semantic-router"
  ],
  "author": "JSK9999",
  "license": "Apache-2.0",
  "homepage": "https://jsk9999.github.io/ai-nexus/",
  "bugs": {
    "url": "https://github.com/JSK9999/ai-nexus/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JSK9999/ai-nexus.git"
  },
  "files": [
    "bin/",
    "dist/",
    "config/"
  ],
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "inquirer": "^9.2.0",
    "ora": "^8.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^20.10.0",
    "eslint": "^10.0.2",
    "semantic-release": "^25.0.3",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.56.1",
    "vitest": "^1.0.0"
  }
}
